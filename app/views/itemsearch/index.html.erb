<form action="<%= search_path %>" method="POST">
    <input type="input" name="keyword" value="<%= @keyword %>" required>
    <input type="submit" value="Search">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>


<% if ! @goods.nil?  && @goods.count > 0%>
<ul>
    <% item=@goods.Items[0]%>
    <%= link_to item.Item.itemName, item.Item.affiliateUrl %>
    <br><% item.Item.mediumImageUrls.each do |image| %>
    <img src=<%= image.imageUrl%> alt="画像がありません" width=100 height=100>
    <% end%>
    <br><br>
    <button class="btn disabled btn-large">もしかして：<%= @word %></button>
    <% twitter_url="http://sorejanai.herokuapp.com/show?pid=" + params["pid"] %>
    <a href="https://twitter.com/share" class="twitter-share-button" data-url=<%= twitter_url %>  data-text=<%= @tw_text %> data-lang="ja" data-hashtags="Sorejanai">ツイート</a>
