<h1><%= link_to 'sorezyanai search', root_path %></h1>

ソレじゃない
<form action="<%= search_path %>" method="POST">
    <input type="input" name="keyword" value="<%= @keyword %>" required>
    <input type="submit" value="Search">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>

<% if ! @jsonData.nil? %>
<ul>
    <% item=@jsonData['Items'][0]%>
    <%= link_to item['Item']['itemName'], item['Item']['affiliateUrl'] %>
    <br><% item['Item']['mediumImageUrls'].each do |image| %>
    <img src=<%= image['imageUrl']%> alt="画像がありません" width=100 height=100>
    <% end%>
    <br>もしかして:<%= @keyword%>
    <br>to Roman:<%= @keyword.to_roman%>
    <br>分解:<%= chr=@keyword.to_roman.split("")%>
    <br><%= vowel=chr.select {|item| item == "a" || item == "i" || item == "u" || item == "e" || item == "o" || item == "n" }%>
    <br>母音:<%= vowel.join%>
    <br><%= vowel.join.to_hiragana%>
</ul>
<% end %>
