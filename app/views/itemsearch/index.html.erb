$(function() {
  $('#comp').autocomplete({
    autoFocus: true,
    delay: 10,
    minLength: 2 ,
    source: function(req, resp){
				$.ajax({
				    url: "/autocomplete",
				    type: "POST",
				    cache: false,
				    dataType: "json",
				    data: {
				      keyword: req.term
				    },
				    success: function(o){
				    	l = new Array
				    	for (i=0; i<o.length; i++) {
				    		l.push(o[i].surface)
				    	}
				    	resp(l);
				    },
				    error: function(xhr, ts, err){
				    	resp(['']);
				    }
			    });
			  } 
  });
});

</script>

